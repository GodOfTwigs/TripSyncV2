@page
@model TripSyncV2.Pages.OfferRideModel
@{
    ViewData["Title"] = "Offer a Ride";
}

<div class="offer-ride-page-container">
    <div class="offer-ride-card">
        <h2 class="text-center mb-4">Offer a Ride</h2>

        @if (Model.Message != null)
        {
            <div class="alert alert-info">@Model.Message</div>
        }

        <form method="post" class="mt-3">
            <div class="mb-3">
                <label asp-for="From" class="form-label"></label>
                <input asp-for="From" class="form-control" placeholder="Starting Point" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="To" class="form-label"></label>
                <input asp-for="To" class="form-control" placeholder="Destination" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" type="datetime-local" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Seats" class="form-label"></label>
                <input asp-for="Seats" class="form-control" placeholder="Number of Seats" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Price per Seat" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-signature w-100 mt-2">Offer Ride</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
