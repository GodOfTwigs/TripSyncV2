@page
@model TripSyncV2.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to TripSync";
}

<div class="homepage-container">
    <div class="hero-section text-center">
        <h1 class="display-4 fw-bold mb-3">Welcome to TripSync</h1>
        <p class="lead mb-5 text-muted">
            Share rides, split costs, and travel smarter.
        </p>
        <div class="d-grid gap-3 col-6 mx-auto">
            <a asp-page="/Search" class="btn btn-signature btn-lg w-100">Search Rides</a>
            <a asp-page="/OfferRide" class="btn btn-signature btn-lg w-100">Offer a Ride</a>
            <a asp-page="/MyRides" class="btn btn-signature btn-lg w-100">My Rides</a>
        </div>
    </div>

    <div class="features-section mt-5">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded">
                    <h3 class="mb-3">Easy to Use</h3>
                    <p class="text-muted">Search or offer rides with just a few clicks. Simple, intuitive, and fast.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded">
                    <h3 class="mb-3">Safe & Secure</h3>
                    <p class="text-muted">All rides are tracked and verified. Travel with confidence every time.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded">
                    <h3 class="mb-3">Save Money</h3>
                    <p class="text-muted">Split costs with fellow travelers and make your trips more affordable.</p>
                </div>
            </div>
        </div>
    </div>
</div>
